{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "pretty": true,
  },
  "include": [
    "src/",
    "index.ts"
  ],
  "exclude": [
    "node_modules/",
    "dist/"
  ]
}